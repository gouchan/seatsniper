# ============================================================================
# SeatSniper Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (PostgreSQL + TimescaleDB)
DATABASE_URL=postgresql://seatsniper:your_password@localhost:5432/seatsniper
# Or individual settings:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=seatsniper
# DB_USER=seatsniper
# DB_PASSWORD=your_password

# Redis Cache
REDIS_URL=redis://localhost:6379
# Or individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ============================================================================
# Platform APIs (MVP: StubHub + Ticketmaster)
# ============================================================================

# StubHub API (OAuth 2.0)
# Get credentials from: https://developer.stubhub.com/
STUBHUB_CLIENT_ID=your_stubhub_client_id
STUBHUB_CLIENT_SECRET=your_stubhub_client_secret

# Ticketmaster Discovery API
# Get API key from: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=your_ticketmaster_api_key

# SeatGeek API
# Get credentials from: https://seatgeek.com/build
SEATGEEK_CLIENT_ID=your_seatgeek_client_id
SEATGEEK_CLIENT_SECRET=your_seatgeek_client_secret

# ============================================================================
# Notification Channels
# ============================================================================

# Telegram Bot
# Create a bot with @BotFather and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Twilio SMS & WhatsApp
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
# WhatsApp Business API (optional, requires Twilio WhatsApp sender)
TWILIO_WHATSAPP_NUMBER=+1234567890

# ============================================================================
# Monitoring Configuration
# ============================================================================

# Cities to monitor (comma-separated, lowercase)
MONITORED_CITIES=portland,seattle
